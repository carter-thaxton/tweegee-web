extends layout

block javascripts
  script(src="/javascripts/index.js")
  script(src="/javascripts/twee-engine.js")

block content
  h1 Tweegee

  h3 Upload a Twine or Twee file
  form#upload_form(enctype="multipart/form-data", method="post")
    input#file(type="file", name="file", accept=".tws,.twee,.tw2,.html")
    input#submit(type="submit", value="Upload file")

  br

  h4 Or select one of the following:
  .builtins
    button.builtin Lifeline
    button.builtin LLHTI
    button.builtin Playlist
    button.builtin Test

  hr

  #errors

  #story.hidden
    h2#title
    h3#author

    ul#statistics
      li Passage count:&nbsp;
        span#passage_count
      li Word count:&nbsp;
        span#word_count

    button#start Start Story

    #messages

  #bottom
